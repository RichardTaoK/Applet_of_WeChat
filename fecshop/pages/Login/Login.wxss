/* pages/Login/Login.wxss */
.login-tab{
  height: 90rpx;
  border-bottom: 6rpx solid #e6e6e6;
  display: flex;
  padding: 0 100rpx;
}
.login-tab .title{
  width: 50%;
  height: 90rpx;
  padding: 0 100rpx;
  font-size: 12pt;
  text-align: center;
  line-height: 90rpx;
}
.login-tab .title.active{
  color: #0894ec;
  border-bottom: 4rpx solid #0894ec;
}
.tab{
  padding: 0 40rpx 40rpx;
}
.nav{
  height: 96rpx;
  padding: 0 10rpx;
  font-size: 10pt;
  line-height: 96rpx;
  border-bottom: 4rpx solid #e6e6e6;
  display: flex;
}
.nav .label{
  width: 240rpx;
  height: 96rpx;
}
.nav input{
  width: 530rpx;
  height: 36rpx;
  margin: auto 0;
}
.btn{
  height: 90rpx;
  border-radius: 20rpx;
  color: #333;
  background: #e6e6e6;
  line-height: 90rpx;
  text-align: center;
  margin-top: 60rpx;
}
.forget-password{
  height: 44rpx;
  margin-top:40rpx;
  font-size: 10pt;
  line-height: 44rpx;
  color: #777;
  padding: 0 10rpx;
}
.forget-password .tb-pass{
  width: 44rpx;
  height: 44rpx;
  float: left;
  background: url(data:image/png;base64,) no-repeat center center / 100% auto;
}
.login{
  display: block;
}
.resgin{
  display: none;
}
.captcha{
  background: no-repeat center center / 100% 80%;
}
.btn.active{
  background: #FE585E;
  color: #fff;
}